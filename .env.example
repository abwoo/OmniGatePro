# Artfish Configuration Template

# --- Basic ---
APP_NAME=artfish-runtime
DEBUG=True
VERSION=0.3.0

# --- Database ---
# Default is SQLite. For PostgreSQL: postgresql://user:pass@host:5432/db
DATABASE_URL=sqlite:///./artfish.db

# --- Execution ---
# Set to True to run tasks in the same process (no Redis needed)
FORCE_SYNC_EXECUTION=True

# --- Async Queue (Only if FORCE_SYNC_EXECUTION=False) ---
REDIS_URL=redis://localhost:6379/0

# --- Storage ---
EXPORT_DIR=exports

# --- API ---
HOST=0.0.0.0
PORT=8000

# --- External Services (Future Plugins) ---
# OPENAI_API_KEY=sk-...
# SD_WEBUI_URL=http://localhost:7860
